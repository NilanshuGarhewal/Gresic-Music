{
  "compilerOptions": {
    /* Basic Options */
    "target": "es2016",                     /* Set JS version for output */
    "module": "commonjs",                   /* Module system */
    "rootDir": "src",                        /* Source folder */
    "outDir": "dist",                        /* Output folder */
    "esModuleInterop": true,                 /* Enable default imports for CommonJS */
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],                  /* Include all TS files in src */
  "exclude": ["node_modules", "dist"]      /* Exclude node_modules and dist */
}
